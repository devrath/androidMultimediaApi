<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/rootId"
    android:padding="@dimen/sel_screen_padding"
    tools:context=".ui.SelectionActivity">

    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chipGroupContainerId"
        layout="@layout/include_media_chips"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mediaExtractorId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_extractor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mediaMuxerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_muxer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadPartialVideoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/download_partial_video" />

    </androidx.appcompat.widget.LinearLayoutCompat>



</LinearLayout>